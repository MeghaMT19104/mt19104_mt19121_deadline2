<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <EditText
            android:id="@+id/symptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Symptoms"/>
        <EditText
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Patient name "/>
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Age of patient"
            android:id="@+id/age"/>
        <TextView
            android:id="@+id/dep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Department"
            android:textSize="18dp"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/Departmentspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_gravity="center_horizontal"
            android:visibility="visible" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET DOCTOR LIST"
            android:id="@+id/getdoc"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/Selectdoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Doctor from list "
            android:visibility="gone"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/doctorspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ward_sp"></androidx.appcompat.widget.AppCompatSpinner>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stay_d"
            android:hint="Enter number of days to stay"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/addpat"
            android:text="Add Patient"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LogOut"
            android:gravity="center_horizontal"
            android:id="@+id/logout"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</LinearLayout>